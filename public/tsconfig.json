{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2020",
        "esModuleInterop": true,
        "removeComments": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es5",
            "dom",
            "ES2015"
        ],
        "watch": true,
        "listFiles": false,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/*"
    ]
}